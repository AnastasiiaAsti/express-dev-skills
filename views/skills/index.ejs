<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Dev Skills</title>
</head>
<body>
    <h1>Skills as of <%= time  %></h1>
    <a href="/skills/new">Add Skill</a></br>
    <ul>
        <% skills.forEach(function(skill) { %>
        <li>
            <form action="/skills/<%= skill.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button id="delete" type="submit">X</button>
            </form>
            <a href="/skills/<%= skill.id %>"><%= skill.skill %></a> -
            <%= skill.level %>
        </li>
        <% }); %>
    </ul>
    <a href="/">Back to the main page</a>
</body>
</html>